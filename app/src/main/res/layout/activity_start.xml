<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    tools:ignore="HardcodedText"
    android:weightSum="1"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.test.connect.connectdemo.StartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".50"
        tools:ignore="contentDescription"
        android:gravity="bottom">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"

        android:id="@+id/icon_home" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".35"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@drawable/et_bg"
        android:layout_marginEnd="25sp"
        android:layout_marginStart="25sp"
        android:hint="username"
        android:drawablePadding="10sp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:id="@+id/et_username"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
       />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@drawable/et_bg"
        android:layout_marginEnd="25sp"
        android:layout_marginStart="25sp"
        android:hint="password"
        android:drawablePadding="10sp"
        android:id="@+id/et_passwrd"
        android:drawableStart="@drawable/ic_vpn_key_black_24dp"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:layout_marginTop="20sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="@color/colorPrimary"
        android:layout_marginEnd="25sp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="25sp"
        android:text="LOG IN"
        android:textColor="@color/colorWhite"
        android:id="@+id/btn_login"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="or sign in with"
        android:gravity="center_horizontal"
        android:id="@+id/tv_sign"
        android:layout_marginTop="30sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        tools:ignore="contentDescription"
        android:weightSum="3">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_fb"
        android:layout_weight="1"
        android:layout_marginTop="20sp"
        android:src="@drawable/ic_fb_icon"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_google"
        android:layout_weight="1"
        android:layout_marginTop="20sp"
        android:src="@drawable/ic_google_plus_icon"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:id="@+id/iv_linkedin"
        android:src="@drawable/ic_linked_in_icon"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".55"
        android:paddingTop="5sp"
        android:id="@+id/tv_register"
        android:text="Do not have account yet?"
        android:gravity="end"
        android:paddingStart="2sp"
        android:paddingEnd="5sp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Here"
        android:layout_weight=".40"
        android:background="#ffffff"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="30sp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
